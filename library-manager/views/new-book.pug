extends layout.pug

block content 
    h1= title 

    if (errors)
        h2.error Oops! Error.
        ul.error 
            each error in errors 
                li 
                    =error.message 

    form(method= "POST" action="/books/new")
        p
            label(for= "title") Title
            input#title(
                type="text" 
                name="title"
                required autofocus
                value= book ? book.title : ""
            )
        p
            label(for= "author") Author
            input#author(
                type="text" 
                name="author"
                value= book ? book.author : ""
            )
        p
            label(for= "genre") Genre
            input#genre(
                type="text" 
                name="genre"
                value= book ? book.genre : ""
            )
        p
            label(for= "year") Year
            input#year(
                type="text" 
                name="year"
                value= book ? book.year : NULL
            )
        p
            input(
                value="Create New Book" 
                type="submit"
            )
        p
            a.button(href="/books") Cancel